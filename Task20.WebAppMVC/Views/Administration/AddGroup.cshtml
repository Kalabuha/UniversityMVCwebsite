@model GroupModel

@{
    ViewData["Title"] = "Create new group";
}

<h1 class="header-h1 text-container">Creation of a new group</h1>

@if (Model != null)
{
    <div class="manager-container">
        <p class="text-container">
            Fill in the parameters fields of the new group. The sign '*' marks the required input fields.
            The field for entering the group leader is filled with a number.
        </p>

        <form class="group-button" asp-area="" asp-controller="Administration" asp-action="AddGroup" method="post">
            <input type="hidden" name="group.Id" value="@Model.Id" />
            <input type="hidden" name="group.CourseId" value="@Model.CourseId" />
            <input type="hidden" name="group.CreationDate" value="@Model.CreationDate" />

            <h2 class="header-h2 text-container">Fill in the text fields:</h2>

            <p class="manager-label text-container">* Name:</p>
            <input class="group-input" type="text" name="group.Name" value="@Model.Name" />
            <p class="manager-label text-container">@ViewBag.NameNotCorrect </p>

            <p class="manager-label text-container">* Description:</p>
            <input class="group-input" type="text" name="group.Description" value="@Model.Description" />
            <p class="manager-label text-container">@ViewBag.NameNotCorrect </p>

            <p class="manager-label text-container">Group leader:</p>
            <input class="group-input" type="number" name="group.LeaderId" value="@Model.LeaderId" />

            <input class="group-input-button" type="submit" value="Add" />
        </form>
    </div>
}
else
{
    <p class="text-container">No data</p>
}